@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<LibraryApp.Models.Book>

<h1 class="text-center mb-4">Gestión de Libros</h1>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@book.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@book.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success mt-3">Agregar Libro</a>
